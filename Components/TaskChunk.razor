<MudPaper Width="100%" Elevation="2">
    <MudGrid Justify="Justify.FlexStart">
        <MudItem sm="1">
            <MudCheckBox 
                Style="margin-top: 20px; margin-left: 15px"
                Checked="@Task.IsChecked"
                CheckedChanged="@((bool isChecked) => OnCheck.InvokeAsync(isChecked))"
                Color="Color.Primary" 
                Dense="true">
            </MudCheckBox>
        </MudItem>
        <MudItem sm="7">
            <MudTextField 
                Style="margin-bottom: 10px"
                @bind-Value="@Task.Description" 
                OnBlur="@(() => OnEdit.InvokeAsync(Task))" 
                @onfocusin="@(() => OnStartEdit.InvokeAsync(Task))" 
                Clearable="false" 
                Immediate="true">
            </MudTextField>
        </MudItem> 

        <MudItem sm="3" Style="margin-bottom: -20px">
            <MudGrid Justify="Justify.SpaceEvenly">
                <MudItem sm="7">
                    @if (Task.DueDetails?.DueDate != null)
                    {
                        @Task.DueDetails.DueDate.Value.ToString("MMM dd, yyyy")
                    }
                    else{
                        
                    }
                </MudItem>
                <MudItem sm="5">
                    @if (Task.DueDetails?.DueTime != null)
                    {
                        @DateTime.Today.Add(Task.DueDetails.DueTime.Value).ToString("h:mm tt")
                    }
                </MudItem>
            </MudGrid>
        </MudItem>
 
        <MudItem sm="1" Style="margin-top: 12px; margin-left: -10px">
            <MudFab 
                               Color="Color.Default" 
                OnClick="@(() => OnDelete.InvokeAsync(Task))" 
                EndIcon="@Icons.Material.Rounded.Delete" 
                Size="Size.Small">
            </MudFab>
        </MudItem>
    </MudGrid>
</MudPaper>
