<MudDialog>
    <DialogContent>
        <MudGrid Justify="Justify.Center" Style="margin-bottom: 5px">
            <MudText Color="Color.Error" Typo="Typo.h6">
                @ListName
            </MudText>
        </MudGrid>
        
        <MudText> Proceeding will permanently delete this list and its contents. This action cannot be undone. </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Delete">Delete</MudButton>
    </DialogActions>
</MudDialog>