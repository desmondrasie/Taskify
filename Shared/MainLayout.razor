@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<!-- MainLayout.razor -->
<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="3">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <h2>Taskify</h2>
        <MudIcon Icon="@Icons.Material.Rounded.AddTask" Size="Size.Large" />

        <MudSwitch Checked="@isDarkMode" Color="Color.Dark" Label="@text" Style="margin-left: auto;" CheckedChanged="@((bool isChecked) => DarkModeToggled(isChecked))" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MyNavMenu />
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private MudTheme _theme = new();
    public bool isDarkMode = true;
    public string text = string.Empty;

    protected override void OnInitialized()
    {
        UpdateToggleLabelText();
    }

    private void DarkModeToggled(bool isChecked)
    {
        isDarkMode = isChecked;
        UpdateToggleLabelText();
    }

    private void UpdateToggleLabelText()
    {
        text = isDarkMode ? "Toggle light mode" : "Toggle dark mode";
    }
}
